<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="fragmentBackground">@color/fragment_bg_light</item>
        <item name="textColor">@color/text_black</item>
        <item name="intervalColorPositive">@color/red</item>
        <item name="intervalColorNeutral">@color/yellow</item>
        <item name="intervalColorNegative">@color/green</item>
        <!--        <item name="rippleEffectTheme">@drawable/ripple_effect_light</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="fragmentBackground">@color/fragment_bg_dark</item>
        <item name="textColor">@color/text_white</item>
        <item name="intervalColorPositive">@color/interval_red_dark</item>
        <item name="intervalColorNeutral">@color/interval_yellow_dark</item>
        <item name="intervalColorNegative">@color/interval_green_dark</item>
        <!--        <item name="rippleEffectTheme">@drawable/ripple_effect_dark</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>