<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fragmentBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:text="My Account"
                android:textStyle="bold"
                android:fontFamily="@font/google_font_normal"
                android:paddingTop="55dp"
                android:paddingBottom="55dp"
                android:textSize="25sp"
                android:textColor="?attr/textColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/account_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Insert Name Here"
                        android:fontFamily="@font/google_font_normal"
                        android:textSize="20sp"
                        android:paddingTop="40px"
                        android:textColor="?attr/textColor"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/account_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingTop="40px"
                        android:text="Insert Status Here"
                        android:fontFamily="@font/google_font_normal"
                        android:textSize="20sp"
                        android:textColor="?attr/textColor"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/test_covid"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Daftar Test Covid-19"
                    android:layout_marginTop="70px"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:fontFamily="@font/google_font_normal"
                    android:textSize="20sp">
                </Button>

                <Button
                    android:id="@+id/account_sign_out"
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Sign Out"
                    android:layout_marginTop="70px"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:fontFamily="@font/google_font_normal"
                    android:textSize="20sp">
                </Button>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>





