<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/drawer_icon_home_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:background="@color/black"
                android:padding="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/drawer_icon_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_home_24"
                android:padding="20dp"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/drawer_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textSize="18sp"
                android:fontFamily="@font/google_font_normal"
                android:layout_gravity="center"
                android:text="Home"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/drawer_icon_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_data_usage_24"
                android:padding="20dp"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/drawer_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:fontFamily="@font/google_font_normal"
                android:paddingBottom="22dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Data"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/drawer_icon_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_article_24"
                android:padding="20dp"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/drawer_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/google_font_normal"
                android:text="Berita"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/drawer_image_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_help_24"
                android:padding="20dp"
                app:tint="@color/black"

                />

            <TextView
                android:id="@+id/drawer_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/google_font_normal"
                android:text="FAQ"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drawer_icon_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/drawer_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/google_font_normal"

                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drawer_image_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_settings_24"
                android:padding="20dp"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/drawer_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/google_font_normal"
                android:text="Settings"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drawer_image_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                android:padding="20dp"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/drawer_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/google_font_normal"
                android:text="Exit"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

